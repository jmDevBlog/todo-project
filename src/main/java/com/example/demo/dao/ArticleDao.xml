<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.dao.ArticleDao">
	<select id="getList" resultType="Article">
		SELECT *
		FROM todogrp 
		ORDER BY ID DESC
	</select>
	
	<select id="getTotalCount"  resultType="int">
		SELECT COUNT(*)
		FROM todogrp
	</select>
	
	
	<insert id="create" parameterType="String">
		INSERT INTO todogrp(title, sdate) 
		VALUES(#{title},NOW())
	</insert>
	
	<delete id="delete" parameterType="int">
		DELETE FROM todogrp
		WHERE ID = #{id}
	</delete>
	
	<update id="done" parameterType="int">
		UPDATE todogrp
		SET done = 1, ddate = NOW()
		WHERE ID = #{id}
	</update>

	<update id="modify" parameterType="Article">
		UPDATE todogrp
		SET title = #{title}
		WHERE ID = #{id}
	</update>
	
	<select id="read" resultType="Article" parameterType="int">
     SELECT *
     FROM todogrp
     WHERE ID = #{id}
   </select> 

</mapper>